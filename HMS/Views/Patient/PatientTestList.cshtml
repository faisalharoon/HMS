
@{
    ViewBag.Title = "PatientTestList";
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Patient's Tests</h2>
                        <br />
                        <a class="btn btn-raised g-bg-cyan" href="/add-patient-test?Patient_id=@Request.QueryString["Patient_id"]">Add Patient Test</a>

                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">

                            <thead>
                                <tr>
                                    <th>Test Name</th>
                                    <th>Attribute Name</th>
                                    <th>Normal Range</th>
                                    <th>Patitent Result</th>

                                </tr>
                            </thead>
                            <tbody>
                                
                                    @if (ViewBag.patientTestDetails != null)
                                    {

                                        var details = ViewBag.patientTestDetails;
                                        foreach (var d in details)
                                        {
                                                <tr>

                                                    <td><input type="hidden" id="" name="" value="@d.TestAttributeID" />  @d.TestName  </td>
                                                    <td>  @d.AttributeName </td>

                                                    <td>  @d.NormalRange</td>

                                                    <td>
                                                        @d.Result
                                                    </td>
                                                </tr>

                                            }

                                        }

                                        else
                                        {
                                                                <tr>
                                                                    <td colspan = "4" > No records </td>

                                                                     </tr>
                                                            }

                                    

                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>