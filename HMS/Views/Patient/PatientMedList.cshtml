
@{
    ViewBag.Title = "PatientMedList";
}
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Patient's Medicines</h2>
                        <br />
                        <a class="btn btn-raised g-bg-cyan" href="/add-patient-medicine?Patient_id=@Request.QueryString["Patient_id"]">Add Patient Medicine</a>
                       
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">

                            <thead>
                                <tr>
                                    <th>Patient Appointmnet</th>
                                    <th>Medicine Name</th>
                                    <th>Timing</th>
                                    <th>Occurance</th>
                                    <th>NoofDays</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (ViewBag.lstPatientMedicine != null)
                                    {
                                        foreach (var item in ViewBag.lstPatientMedicine)
                                        {
                                            <tr>
                                                <td>@item.AppointmentDate</td>

                                                <td>@item.MedicineName</td>
                                                <td>@item.Timing</td>
                                                <td>@item.Occurance</td>
                                                <td>@item.NoofDays</td>
                                                <td>@item.Quantity</td>
                                            </tr>

                                        }
                                    }
                                    else if (ViewBag.lstPatientMed != null)
                                    {
                                        foreach (var item in ViewBag.lstPatientMed)
                                        {
                                            <tr>
                                                <td>@item.AppointmentDate</td>

                                                <td>@item.MedicineName</td>
                                                <td>@item.Timing</td>
                                                <td>@item.Occurance</td>
                                                <td>@item.NoofDays</td>
                                                <td>@item.Quantity</td>
                                            </tr>

                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4">No records</td>
                                        </tr>
                                    }

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        </div></section>