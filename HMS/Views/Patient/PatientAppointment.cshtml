@model HMS.Models.tblPatientAppointment

@{
    ViewBag.Title = "PatientAppointment";
}
@using (Html.BeginForm("PatientAppointment", "Patient"))
{
    @Html.ValidationSummary(true)
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Add Patient</h2>
                <small class="text-muted">Welcome [Hospital Name]</small>
            </div>
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="header">
                            <h2>PAtient Appointment</h2>

                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-lg-4 col-sm-12">
                                    <div class="form-group">
                                        <div class="form-group drop-custum">
                                            @Html.DropDownListFor(model => model.DoctorID, new SelectList(ViewBag.ListDoctor, "ID", "Name"), "---Select Doctor---", new { @class = "form-control show-tick", @id = "ddlDoctor" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.TextBoxFor(x => x.AppointmentDate, new { @type = "text", @class = "datepicker form-control", @id = "txtAppointemtDate", @placeholder = "Appointment Date", @required = "required" })

                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.TextAreaFor(x => x.Description, new { @type = "text", @rows = "4", @class = "form-control no-resize", @id = "txtnote", @placeholder = "Description" })

                                        </div>
                                     </div>
                               </div>
                            </div>

                                            <div class="row clearfix">

                                                <div class="">
                                                    @{
                                                        string Text = "Add Patient's Appointment";
                                                        string patient_id = "";
                                                        if (Model != null)
                                                        {
                                                            patient_id = Model.PatientID.ToString();
                                                            if ( Model.ID != 0)
                                                            { Text = "Update Patient's Appointment"; }

                                                        }

                                                        }
                                                       <input type="hidden"value="@patient_id" name="hdnPatientId" />
                                                  
                                                    <input type="submit" id="btnSave" class="btn btn-raised g-bg-cyan" value="@Text" name="Save" />

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
    </section>

}

