@model HMS.Models.tblTestAttribute

@{
    ViewBag.Title = "TestAttributes";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Attribute List</h2>

        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Test's Attribute</h2>
                        <a href='/add-attribute' style="margin-left:808px;" class="btn btn-raised g-bg-cyan">Add New Attribute </a>

                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Attribute ID</th>
                                    <th>Attribute Name</th>
                                    <th>Test Name</th>
                                    <th>Normal Range</th>


                                    <th>Actions</th>

                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    var list = ViewData["GetAttributes"];
                                    if (list != null)
                                    {
                                        foreach (var item in ViewData["GetAttributes"] as IEnumerable<HMS.Models.tblTestAttribute>)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.AttributeName</td>
                                                <td>@item.tblTest.TestName</td>
                                                <td>@item.NormalRange</td>


                                                <td>
                                                    <a href='/add-attribute?attribute_id=@item.ID&test_id=@item.TestID'>Edit</a>
                                                    <a href='#' onclick="Delete(@item.ID);">
                                                        Delete
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                <label>Record Not Exist</label>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function Delete(id) {
        var r = confirm("Are you sure");
        if (r == true) {
            var url = '/delete-attribute?id=' + id + '';

            window.location.href = url;

        }
        return false;

    }

</script>


