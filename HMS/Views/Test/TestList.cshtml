@model HMS.Models.tblTest

@{
    ViewBag.Title = "TestList";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Tests List</h2>

        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Tests</h2>
                        <a href='/add-test' style="margin-left:808px;" class="btn btn-raised g-bg-cyan">Add New Test </a>

                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Test ID</th>
                                    <th>Test Name</th>
                                    <th>Test Category</th>
                                    <th>Description</th>


                                    <th>Actions</th>

                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    var list = ViewData["GetTests"];
                                    if (list != null)
                                    {
                                        foreach (var item in ViewData["GetTests"] as IEnumerable<HMS.Models.tblTest>)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.TestName</td>
                                                <td>@item.tblTestCategory.TestCategory</td>
                                                <td>@item.Description</td>


                                                <td>
                                                    <a href='/add-test?test_id=@item.ID'>Edit</a>
                                                    <a href='#' onclick="Delete(@item.ID);">
                                                        Delete
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                <label>Record Not Exist</label>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function Delete(id) {
        var r = confirm("Are you sure");
        if (r == true) {
            var url = '/delete-test?id=' + id + '';

            window.location.href = url;

        }
        return false;

    }

</script>

