@model HMS.Models.tblTestAttribute

@{
    ViewBag.Title = "AddTestAttribute";
}


@using (Html.BeginForm("AddTestAttribute", "Test", new { attribute_id = Request.QueryString["attribute_id"],test_id = Request.QueryString["test_id"] }))
{
    @Html.ValidationSummary(true)
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Add Test Attribute </h2>
            </div>
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="header">

                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-group drop-custum">
                                            @Html.DropDownListFor(model => model.TestID, new SelectList(ViewBag.Test, "ID", "TestName"), "---Select Test Name---", new { @class = "form-control show-tick", @id = "ddlTest" })



                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.TextBoxFor(x => x.AttributeName, new { @type = "Text", @class = "form-control", @id = "txtName", @placeholder = "Attribute Name", @required = "required" })

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">


                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.TextBoxFor(x => x.NormalRange, new { @type = "Text", @class = "form-control", @id = "txtDescription", @placeholder = "Normal Range", @required = "required" })
                                        </div>
                                    </div>
                                </div>
                                @{
                                    string Text = "Add Test Attribute";
                                    if (Model.ID != 0)
                                    {
                                        Text = "Update Test Attribute";
                                    }
                                }
                                <input type="submit" id="btnSave" class="btn btn-raised g-bg-cyan waves-effect" value="@Text" name="Save" />

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

}

