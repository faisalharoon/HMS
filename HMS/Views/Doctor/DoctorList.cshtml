@model HMS.Models.tblEmployee
@{
    ViewBag.Title = "Doctors";
}


<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Doctors</h2>

        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Doctors</h2>
                        <ul class="header-dropdown">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>

                            </li>
                        </ul>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Doctors ID</th>
                                    <th>Doctors Name</th>
                                    <th>Designation</th>
                                    <th>Qualification</th>
                                    <th>Status</th>
                                    <th>Gender</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    var list = ViewData["listOfData"];
                                    if (list != null)
                                    { string gender = "";
                                        foreach (var item in ViewData["listOfData"] as IEnumerable<HMS.Models.tblEmployee>)
                                        {
                                            if(item.Gender=="1")
                                            { gender = "Male"; }

                                            if (item.Gender == "2")
                                            { gender = "Female"; }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td>@item.tblEmpDesignation.Designation</td>
                                                <td>@item.tblEmployeeQualification.Qualification</td>
                                                <td>@item.tblEmployeeSatu.Satus</td>
                                                <td>@gender</td>
                                                <td>
                                                    <a href='/add-doctor?Doctor_id=@item.ID'>Edit</a>
                                                    <a href='#' onclick="Delete(@item.ID);">
                                                        Delete
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                <label>Record Not Exist</label>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function Delete(id) {
        var r = confirm("Are you sure");
        if (r == true) {
            var url = '/delete-doctor?Doctor_id=' + id + '';

            window.location.href = url;

        }
        return false;

    }

</script>


