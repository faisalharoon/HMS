@model HMS.Models.tblMedicine

@{
    ViewBag.Title = "MedicineList";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Medicine List</h2>

        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Medicine</h2>
                        <a href='/add-medicine' style="margin-left:808px;" class="btn btn-raised g-bg-cyan">Add New Medicine </a>

                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Medicine ID</th>
                                    <th>Medicine Name</th>
                                    <th>Medicine Category</th>
                                    <th>Description</th>


                                    <th>Actions</th>

                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    var list = ViewData["GetMedicine"];
                                    if (list != null)
                                    {
                                        foreach (var item in ViewData["GetMedicine"] as IEnumerable<HMS.Models.tblMedicine>)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.MedicineName</td>
                                                <td>@item.tblMedicineCategory.MedicineCategoryName</td>
                                                <td>@item.Description</td>


                                                <td>
                                                    <a href='/add-medicine?cat_id=@item.ID'>Edit</a>
                                                    <a href='#' onclick="Delete(@item.ID);">
                                                        Delete
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                <label>Record Not Exist</label>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function Delete(id) {
        var r = confirm("Are you sure");
        if (r == true) {
            var url = '/delete-medicine?id=' + id + '';

            window.location.href = url;

        }
        return false;

    }

</script>

