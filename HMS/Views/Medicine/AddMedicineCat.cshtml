@model HMS.Models.tblMedicineCategory

@{
    ViewBag.Title = "AddMedicineCat";
}

@using (Html.BeginForm("AddMedicineCat", "Medicine", new { cat_id = Request.QueryString["cat_id"] }))
{
    @Html.ValidationSummary(true)
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Add Medicine Category</h2>
            </div>
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="header">

                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.TextBoxFor(x =>x.MedicineCategoryName, new { @type = "Text", @class = "form-control", @id = "txtName", @placeholder = "Medicine Category Name", @required = "required" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.TextBoxFor(x => x.Description, new { @type = "Text", @class = "form-control", @id = "txtDescription", @placeholder = "Description", @required = "required" })
                                        </div>
                                    </div>
                                </div>
                                @{
                                    string Text = "Add Category";
                                    if (Model.ID != 0)
                                    {
                                        Text = "Update Category";
                                    }
                                }
                                <input type="submit" id="btnSave" class="btn btn-raised g-bg-cyan waves-effect" value="@Text" name="Save" />

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

}

