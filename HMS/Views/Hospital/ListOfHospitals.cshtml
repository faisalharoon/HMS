@model HMS.Models.tblHospital
@{
    ViewBag.Title = "ListOfHospitals";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Hospital</h2>

        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Hospital</h2>
                        <ul class="header-dropdown">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>

                            </li>
                        </ul>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Hospital ID</th>
                                    <th>Hospital Name</th>
                                    <th>Discription</th>
                                    <th>Created Date</th>
                                    <th>Created By</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    var list = ViewData["listOfData"];
                                    if (list != null)
                                    {
                                        foreach (var item in ViewData["listOfData"] as IEnumerable<HMS.Models.tblHospital>)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.HospitalName</td>
                                                <td>@item.Description</td>
                                                <td>@item.CreatedAt</td>
                                                <td>@item.CreatedBy</td>
                                                <td>
                                                    <a href='/add-hospital?Hospital_id=@item.ID'>Edit</a>
                                                    <a href='#' onclick="Delete(@item.ID);">
                                                        Delete
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                <label>Record Not Exist</label>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function Delete(id) {
        var r = confirm("Are you sure");
        if (r == true) {
            var url = '/delete-hospital?id=' + id + '';

            window.location.href = url;

        }
        return false;

    }

</script>

