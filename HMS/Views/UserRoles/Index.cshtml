@model IEnumerable<HMS.Models.UserRole>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>User Roles</h2>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row clearfix">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <a href='/UserRolesCreate' class="btn btn-raised g-bg-cyan waves-effect">Create</a>
                    </div>
                </div>
                <div class="card">
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>Role Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoleName)
                                        </td>
                                        <td>
                                            <a href='/UserRoleEdit?id=@item.ID'>Edit</a>|
                                            <a href='/UserRoleDelete?id=@item.ID'>Delete</a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
                    </div>
</section>

      
        
