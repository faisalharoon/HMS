
@model IEnumerable<HMS.Models.tblPatientBill>

@{
    /**/

    ViewBag.Title = "BillListings";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Patients Record</h2>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Patient Appointment ID</th>
                                    <th>Patient Name</th>
                                    <th>Bill No</th>
                                    <th>Amount</th>
                                    <th>Discount</th>
                                    <th>Created AT</th>
                                    <th>Created By</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var Bill = ViewData["GetBills"];
                                    foreach (var item in Bill as IEnumerable<HMS.Models.tblPatientBill>)
                                    {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PatientAppointmentID)</td>
                                    <td>abc</td>
                                    <td>@Html.DisplayFor(modelItem => item.BillNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@

                                        <a href='/DeleteBill?id=@item.ID'>Delete</a> |
                                        <a href='/EditBill?id=@item.ID'>Edit</a>

                                        @*<a href='/add-test?test_id=@item.ID'>Edit |</a>
        <a href='/DeleteBill?del_id=@item.ID'>Delete</a>*@
                                        @*<a href='#' onclick="Delete(@item.ID);">Delete</a>*@
                                    </td>
                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function Delete(id) {
        var r = confirm("Are you sure");
        if (r == true) {
            var url = '/delete-test?id=' + id + '';

            window.location.href = url;

        }
        return false;

    }

</script>